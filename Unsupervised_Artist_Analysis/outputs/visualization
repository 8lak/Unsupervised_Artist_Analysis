pca_music$rotation %>% as.data.frame() %>% select(PC1:PC4) %>% rownames_to_column(var = 'Variable') %>% pivot_longer(PC1:PC4 ,names_to = 'PC', values_to = 'Value') 

fviz_pca_var(pca_music, repel = TRUE)
